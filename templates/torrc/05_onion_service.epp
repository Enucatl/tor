<% if $single_hop { -%>
HiddenServiceSingleHopMode 1
HiddenServiceNonAnonymousMode 1
SOCKSPort 0

<% } -%>
# hidden service <%= $name %>
HiddenServiceDir <%= $data_dir_path %>
<% if $ports { -%>
<% $ports.each |$item| { -%>
HiddenServicePort <%= $item %>
<% } -%>
<% } -%>

<% if $v3 { -%>
# hidden service v3 static
HiddenServiceDir <%= $data_dir_path %>3
HiddenServiceVersion 3
<% $ports.each |$item| { -%>
HiddenServicePort <%= $item %>
<% } -%>
<% } -%>

